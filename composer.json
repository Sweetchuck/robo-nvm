{
    "name": "sweetchuck/robo-nvm",
    "description": "Robo task wrapper for NVM commands.",
    "license": "GPL-3.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "php": ">=7.1",
        "consolidation/robo": "^1.0",
        "danielstjules/stringy": "^3.1",
        "sweetchuck/utils": "dev-master"
    },
    "require-dev": {
        "ext-json": "*",
        "codeception/codeception": "^2.2",
        "squizlabs/php_codesniffer": "^3.3",
        "sweetchuck/codeception-module-robo-task-runner": "^0.4",
        "sweetchuck/git-hooks": "^0.0",
        "sweetchuck/robo-git": "^0.0",
        "sweetchuck/robo-phpcs": "^0.0.20",
        "symfony/debug": "^4.1",
        "symfony/finder": "^4.0",
        "webmozart/path-util": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Sweetchuck\\Robo\\Nvm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sweetchuck\\Robo\\Nvm\\Test\\Helper\\": "tests/_support/Helper/",
            "Sweetchuck\\Robo\\Nvm\\Tests\\Acceptance\\": "tests/acceptance/",
            "Sweetchuck\\Robo\\Nvm\\Tests\\Unit\\": "tests/unit/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@deploy-git-hooks"
        ],
        "post-update-cmd": [
            "@deploy-git-hooks"
        ],
        "deploy-git-hooks": "\\Sweetchuck\\GitHooks\\Composer\\Scripts::deploy"
    }
}
